{
  "name": "smart-ods-ai",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.ts",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "lint": "biome check src",
    "lint:fix": "biome check src --apply",
    "format": "biome format src --write",
    "test": "pnpm run lint",
    "lint:report": "biome check src --output-format=json > biome-report.json",
    "format:watch": "nodemon --watch src --ext ts,js,json --exec \"pnpm biome format --write src\"",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:reset": "prisma db push --force-reset",
    "db:sync": "prisma db pull && prisma generate",
    "db:studio": "prisma studio"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.17.1",
  "prisma": {
    "schema": "prisma/schema"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.12",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.16.0",
    "nodemon": "^3.1.11",
    "prisma": "^7.2.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "core": "^1.0.113",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.2",
    "ms": "^2.1.3",
    "nodemailer": "^7.0.12",
    "pg": "^8.16.3",
    "winston": "^3.19.0",
    "winston-cloudwatch": "^6.3.0",
    "zod": "^4.1.12",
    "multer": "^1.4.5-lts.1",
    "@google-cloud/speech": "^7.2.1",
    "zoho": "^1.0.0"
  }
}
